<?xml version="1.0" encoding="utf-8"?>
<com.qingguoguo.maraquetext.customview.CustomScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qingguoguo.maraquetext.ListViewTestActivity">

    <com.qingguoguo.maraquetext.customview.CustomLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ListView>
    </com.qingguoguo.maraquetext.customview.CustomLinearLayout>

</com.qingguoguo.maraquetext.customview.CustomScrollView>
